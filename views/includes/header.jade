.container
	.row
		.page-header.clearfix
			h1 #{title}
.navbar.navbar-default.navbar-fixed-top.navbar-inverse
	.container-fluid
		.navbar-header
			a.navbar-brand(href="/") 首页
		.collapse.navbar-collapse
			ul.nav.navbar-nav
				li
					a(href='/results?cat=570dffc6b58979c41bd11d8f&p=0') 动作片
				li
					a(href='/results?cat=570dffc6b58979c41bd11d8f&p=0') 科幻片
				li
					a(href='/results?cat=570dff92b58979c41bd11d8d&p=0') 喜剧片
			form.navbar-form.navbar-right(method='get', action='/results')
				.form-group
					input.form-control(type="text", name='search')
				button.btn.btn-default(type='submit') 搜索
			if user
				p.navbar-text.navbar-right
					span 欢迎您,#{user.name}
					span &nbsp;|&nbsp;
					a.navbar-link(href="/logout") 注销
					span &nbsp;&nbsp;
			else 
				p.navbar-text.navbar-right 
					a.navbar-link(href="#", data-toggle="modal", data-target="#signinModal") 登录
					span &nbsp;|&nbsp;
					a.navbar-link(href="#", data-toggle="modal", data-target="#signupModal") 注册
					span &nbsp;&nbsp;

//- 增加模态窗口
#signupModal.modal.fade
	.modal-dialog
		.modal-content
			form(method="POST",action="/signup")
				.modal-header 注册
				.modal-body
					.form-group
						label(for="signupName") 用户名
						input#signupName.form-control(name="name",type="text")
					.form-group
						label(for="signupPassword") 密码
						input#signupPassword.form-control(name="password",type="text")
				.modal-footer
					button.btn.btn-default(type="button",data-dismiss="modal") 关闭
					button.btn.btn-success(type="submit") 提交
					
#signinModal.modal.fade
	.modal-dialog
		.modal-content
			form(method="POST",action="/signin")
				.modal-header 登录
				.modal-body
					.form-group
						label(for="signinName") 用户名
						input#signinName.form-control(name="name",type="text")
					.form-group
						label(for="signinPassword") 密码
						input#signinPassword.form-control(name="password",type="text")
				.modal-footer
					button.btn.btn-default(type="button",data-dismiss="modal") 关闭
					button.btn.btn-success(type="submit") 提交
			