extends ../index

block content
	.container.contentTop
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th 名字
						th 时间
						th 删除
					tbody
						each item in users
							tr(class="item-id-#{item.id}")
								td #{item.name}
								td #{moment(item.updatedAt).format('MM/DD/YYYY')}
								td: button.btn.btn-danger.del(target="button",data-id="#{item.id}") 删除
	script(src="/js/userdel.js")
