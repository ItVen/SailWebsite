extends ../index

block content
	.container
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th 名字
						th 时间
						th 修改
						th 删除
					tbody
						each item in categories 
							tr(class="item-id-#{item.id}")
								td #{item.name}
								td #{moment(item.updatedAt).format('MM/DD/YYYY')}
								td: a(target="_blank",href="/admin/categories/update/#{item.id}") 修改
								td: button.btn.btn-danger.del(target="button",data-id="#{item.id}") 删除
	script(src="/js/catedel.js")
