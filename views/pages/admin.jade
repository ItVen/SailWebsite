extends ../index

block content
	.container.contentTop
		.row
			form.form-horizontal(method="post",action="/admin/movie",enctype="multipart/form-data")
				.form-group
					label.col-sm-2.control-label(for="#douban") 豆瓣同步
					.col-sm-10
						input#douban.form-control(type="text")
				if movie.id
					input(type="hidden",name="_id",value=movie.id)
				.form-group
					label.col-sm-2.control-label(from="inputCategory") 电影分类 
					.col-sm-10
						input#inputCategory.form-control(type="text",name="categoryName",value=movie.categoryName)
				.form-group
					label.col-sm-2.control-label 分类选择
					each category in categories
						label.radio-inline
							if movie.id
								input(type="radio", name="categoryObj", value="#{category.id}",checked=category.id==movie.categoryObj)
								span #{category.name}
							else
								input(type="radio", name="categoryObj", value="#{category.id}")
								span #{category.name}
				.form-group
					label.col-sm-2.control-label(from="inputTitle") 电影名字
					.col-sm-10
						input#inputTitle.form-control(type="text",name="title",value=movie.title)
				.form-group
					label.col-sm-2.control-label(from="inputDoctor") 电影导演
					.col-sm-10
						input#inputDoctor.form-control(type="text",name="doctor",value=movie.doctor)
				.form-group
					label.col-sm-2.control-label(from="inputCountry") 国家
					.col-sm-10
						input#inputCountry.form-control(type="text",name="country",value=movie.country)
				.form-group
					label.col-sm-2.control-label(from="inputLanguage") 语种
					.col-sm-10
						input#inputLanguage.form-control(type="text",name="language",value=movie.language)
				.form-group
					label.col-sm-2.control-label(from="inputPoster") 海报地址
					.col-sm-10
						input#inputPoster.form-control(type="text",name="poster",value=movie.poster)
				.form-group
					label.col-sm-2.control-label(for="uploadPoster") 上传海报
					.col-sm-10
						input#uploadPoster(type="file", name="uploadPoster")
				.form-group
					label.col-sm-2.control-label(from="inputFlash") 片源地址
					.col-sm-10
						input#inputFlash.form-control(type="text",name="flash",value=movie.flash)
				.form-group
					label.col-sm-2.control-label(from="inputYear") 上映年代
					.col-sm-10
						input#inputYear.form-control(type="text",name="year",value=movie.year)
				.form-group
					label.col-sm-2.control-label(from="inputSummary") 电影简介
					.col-sm-10
						input#inputSummary.form-control(type="text",name="summary",value=movie.summary)
				.form-group
					.col-sm-offset-2.col-sm-10
					button.btn.btn-default(type="submit") 录入
	script(src="/js/admin.js")